<p id="notice"></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr class = row>
      <th class="col-xs-12 col-sm-4 col-md-2"> Title </th>
      <th class="col-xs-12 col-sm-4 col-md-2"> Content </th>
      <th class="col-xs-12 col-sm-4 col-md-2"> Image </th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr class= row "btn-group" role="group" aria-label="...">
        <td class="col-xs-12 col-sm-4 col-md-4"><%= picture.title %></td>
        <td class="col-xs-12 col-sm-4 col-md-4"><%= picture.content %></td>
        <td class="col-xs-12 col-sm-4 col-md-4"><%= image_tag picture.image %></td>

        <!-- <td><%#= picture.user_id %></td> -->
        <td button type="button" class="col-xs-12 col-sm-4 col-md-2 btn btn-info btn-sm">
        <%= link_to '詳細', picture %></td><br>
        <% if picture.user_id == current_user.id %>
          <td button type="button" class="col-xs-12 col-sm-4 col-md-2 btn btn-warning btn-sm">
            <%= link_to '編集', edit_picture_path(picture), data: { confirm: '本当に編集する？' } %></td>
          <td button type="button" class="col-xs-12 col-sm-4 col-md-2 btn btn-danger btn-sm">
            <%= link_to '削除', picture, method: :delete,data: { confirm: '本当に削除する？' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
